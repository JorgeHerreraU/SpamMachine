@model SpamMachine.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex flex-column mb-4">
    <div class="row p-5 rounded">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label text-white text-uppercase font-monospace"></label>
                        <input asp-for="Name" class="form-control text-white" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"
                            class="control-label text-white text-uppercase font-monospace"></label>
                        <input asp-for="Description" class="form-control text-white" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <hr>
                    <div class="d-flex flex-row gap-3">
                        <input type="submit" value="Save" class="btn btn-outline-light text-uppercase font-monospace" />
                        <a asp-action="Index" class="btn btn-outline-light"><i class="fa-solid fa-left"></i> Back to
                            List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
