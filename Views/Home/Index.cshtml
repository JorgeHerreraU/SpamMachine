@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
    <img src="~/images/bender.svg" class="img mb-3" alt="bender-image" style="filter: invert(100%);" />

    <div class="text-white text-center">
        <h4>SPAM MACHINE</h4>
        <h1>WELCOME</h1>

    </div>

    <div class="d-flex flex-row">
        <div data-bs-toggle="tooltip" data-bs-placement="bottom" title="Messages">
            <a class="icon-link" asp-controller="Messages" asp-action="Index">
                <span class=" fa-stack fa-2x">
                    <i class="fa-solid fa-circle fa-stack-2x"></i>
                    <i class="fa-duotone fa-envelope fa-stack-1x fa-inverse"></i>
                </span>
            </a>
        </div>
        <div data-bs-toggle="tooltip" data-bs-placement="bottom" title="Users">
            <a class="icon-link" asp-controller="Users" asp-action="Index">
                <span class="fa-stack fa-2x">
                    <i class="fa-solid fa-circle fa-stack-2x"></i>
                    <i class="fa-duotone fa-user-bounty-hunter fa-stack-1x fa-inverse"></i>
                </span>
            </a>
        </div>
        <div data-bs-toggle="tooltip" data-bs-placement="bottom" title="Categories">
            <a class="icon-link" asp-controller="Categories" asp-action="Index">
                <span class="fa-stack fa-2x">
                    <i class="fa-solid fa-circle fa-stack-2x"></i>
                    <i class="fa-duotone fa-tags fa-stack-1x fa-inverse"></i>
                </span>
            </a>
        </div>
        <div data-bs-toggle="tooltip" data-bs-placement="bottom" title="Queue">
            <a class="icon-link" asp-controller="Queue" asp-action="Index">
                <span class="fa-stack fa-2x">
                    <i class="fa-solid fa-circle fa-stack-2x"></i>
                    <i class="fa-duotone fa-inbox-out fa-stack-1x fa-inverse"></i>
                </span>
            </a>
        </div>
    </div>
</div>



</div>